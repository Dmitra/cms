    "to-markdown": "^2.0.1",
    "uglifyjs": "^2.4.10",
    "webcola": "git+https://github.com/tgdwyer/WebCola.git"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
