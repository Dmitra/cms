  "scripts": {
    "start": "node build/server/index.js",
    "build": "sh bin/build/all",
    "watch-css": "nodemon -w client -e scss -x sh bin/build/css",
    "watch-js": "watchify client/app.js -d -v -o build/client/bundle.js -t [ babelify --presets [ es2015 ] ]",
