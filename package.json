  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "lodash": "global:_",
    "BackboneEvents": "global:BackboneEvents",
    "handlebars": "global:Handlebars",
    "webcola": "global:cola",
    "d3": "d3"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "EasyTabs": "git+https://github.com/JangoSteve/jQuery-EasyTabs.git",
    "backbone-events-standalone": "^0.2.7",
    "body-parser": "^1.14.2",
